<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagePoli"
            android:layout_width="120dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintEnd_toStartOf="@+id/txtPartyList"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/addpolitician" />

        <TextView
            android:id="@+id/txtPoliName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imagePoli"
            android:layout_toRightOf="@+id/imagePoli"
            android:text="Politician Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/txtPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPoliName"
            android:layout_toEndOf="@+id/imagePoli"
            android:layout_toRightOf="@+id/imagePoli"
            android:layout_weight="1"
            android:text="postion"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/txtPartyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPosition"
            android:layout_toEndOf="@+id/imagePoli"
            android:layout_toRightOf="@+id/imagePoli"
            android:layout_weight="1"
            android:text="partylist"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="90dp" />
    </RelativeLayout>

    <!--


                -->


</android.support.constraint.ConstraintLayout>

