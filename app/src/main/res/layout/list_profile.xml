<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="150dp"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="141dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="109dp"
            android:layout_height="97dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/common_full_open_on_phone"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="217dp" />

        <TextView
            android:id="@+id/post_title_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/post_image"
            android:layout_centerHorizontal="true"
            android:text="TITLE" />

        <TextView
            android:id="@+id/post_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/post_image"
            android:layout_alignEnd="@+id/post_title_txtview"
            android:layout_alignRight="@+id/post_title_txtview"
            android:layout_marginBottom="19dp"
            android:text="USER" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>